{
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "./dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    // https://firebase.google.com/docs/hosting/full-config#rewrites
    "rewrites": [
      {
        "source": "**/app.js.map",
        "destination": "/app.js.map"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
