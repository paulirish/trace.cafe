{
  "compilerOptions": {
    "outDir": ".tmp/tsbuildinfo/",
    "composite": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,

    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "allowJs": true,
    "checkJs": true,
    "strict": true,

    // Limit to base JS and DOM defs.
    "lib": ["ES2021", "DOM"],

    "forceConsistentCasingInFileNames": true

    // "listFiles": true,
    // "noErrorTruncation": true,
    // "extendedDiagnostics": true,
  },
  "include": [
    "src/**/*.js",
    "types/**/*.d.ts",
    "package.json"
  ]
}
